{
  "name": "real-time-drawing-game",
  "version": "1.0.0",
  "description": "A real-time drawing game with timer and admin controls",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^4.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.19"
  }
} 